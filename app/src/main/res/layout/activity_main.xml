<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_above="@+id/textView3"
        android:layout_marginBottom="20dp"
        android:text="Genero:"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_above="@+id/textView4"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@+id/txtnombre"
        android:text="Nombre:"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnenviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="204dp"
        android:onClick="enviar_actividad"
        android:text="Enviar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtnombre"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="23dp"
        android:background="#3F51B5"
        android:text="Practica 1 UI Android y Kotlin"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_above="@+id/btnenviar"
        android:layout_marginBottom="57dp"
        android:text="Telefono:"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_above="@+id/textView2"
        android:layout_marginBottom="20dp"
        android:text="Fecha nacimiento:"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtnombre"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnenviar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="228dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <RadioButton
        android:id="@+id/rbmasculino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnenviar"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="173dp"
        android:layout_toEndOf="@+id/textView4"
        android:text="Masculino" />

    <RadioButton
        android:id="@+id/rbfemenino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnenviar"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="172dp"
        android:layout_toEndOf="@+id/textView4"
        android:text="Femenino" />

    <EditText
        android:id="@+id/ednacimiento"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnenviar"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="110dp"
        android:layout_toEndOf="@+id/textView3"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/txttelefono"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnenviar"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="54dp"
        android:layout_toEndOf="@+id/textView2"
        android:ems="10"
        android:inputType="phone" />
</RelativeLayout>